<%- include('partials/header') %>

<h2>Customer Survey</h2>

<form id="surveyForm" method="POST" action="/survey_submitted" class="card form">
  <div class="grid-2">
    <div>
      <label for="first">First name</label>
      <input id="first" type="text" name="first" required />
    </div>
    <div>
      <label for="last">Surname</label>
      <input id="last" type="text" name="last" required />
    </div>
  </div>

  <label for="email">Email address</label>
  <input
    id="email"
    type="email"
    name="email"
    required
    autocomplete="email"
    inputmode="email"
    minlength="6"
    maxlength="254"
    pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}"
    title="Enter a valid email like name@example.com"
    data-required-msg="Email is required."
    data-type-msg="Please enter a valid email address (e.g., name@example.com)."
    data-pattern-msg="Please use a valid email format (e.g., name@example.com)."
  />

  <label for="age">How old are you?</label>
  <input id="age" type="text" name="age" inputmode="numeric" required />

  <fieldset>
    <legend>Which of the following drinks categories do you consume?</legend>
    <% for (const c of productCategories) { %>
      <label class="inline">
        <input type="radio" name="category" value="<%= c %>" required />
        <span><%= c %></span>
      </label>
    <% } %>
  </fieldset>

  <label class="inline">
    <input type="checkbox" name="is_student" />
    <span>Are you a student?</span>
  </label>

  <button type="submit" form="surveyForm">Submit Survey</button>
</form>

<%- include('partials/footer') %>
